@model LibraryProject.Models.Computer

@{
    ViewBag.Title = "Kompiuterio rezervavimas";
}

<h2>Kompiuterio rezervavimas</h2>

<div>
    <h4>Kompiuterio informacija</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CPU)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CPU)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GPU)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GPU)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Monitor)
        </dt>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Rezervuoti" class="btn btn-success" />
            @Html.ActionLink("Atgal į sąrašą", "Index", "Computer", new { @class = "btn btn-default" })
        </div>
    }
</div>
