@model IEnumerable<LibraryProject.Models.Book>
@using LibraryProject.Controllers

@{
    ViewBag.Title = "Index";
}

<h2>Knygų sąrašas</h2>

<p>
    @Html.ActionLink("Sukurti Naują", "Create")
</p>
<p>
    @Html.ActionLink("Laisvos Knygos", "FreeBooks")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Condition.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Library.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearWritten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Author.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Condition.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Library.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearWritten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @if (Auth.GetRole() == (int)Auth.Roles.LibraryWorker)
            {
                <div>
                    @Html.ActionLink("Detaliau", "Details", new { id = item.BookId })
                </div>
                <div>
                    @Html.ActionLink("Ištrinti", "Delete", new { id = item.BookId })
                </div>
            }

            @if (Auth.GetRole() == (int)Auth.Roles.LibraryUser)
            {
                <div>
                    @Html.ActionLink("Detaliau", "Details", new { id = item.BookId })
                </div>
                <div>
                    @Html.ActionLink("Rezervuoti", "Reserve", new { id = item.BookId })
                </div>
             }
            </td>
        @if (Auth.GetRole() == (int)Auth.Roles.LibraryWorker)
        {
        <td>
            <form method="POST">
                <div class="form-group">
                    <label for="UserId">naudotojo id</label>
                    <input type="number" class="form-control" id="UserId" name="UserId" placeholder="id">
                </div>
                @Html.ActionLink("Išduoti", "ReserveForUser", new { id = item.BookId, userId = 1 })
            </form>
        </td>
        }
    </tr>
    }

</table>
