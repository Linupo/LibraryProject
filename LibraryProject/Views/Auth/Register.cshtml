
@{
    ViewBag.Title = "Registracija";
}

<h2>Registracijos forma</h2>
<form>
    <div class="form-group">
        <label for="name">Vardas</label>
        <input type="text" class="form-control" id="name" placeholder="Įveskite savo vardą">
    </div>
    <div class="form-group">
        <label for="surname">Pavardė</label>
        <input type="text" class="form-control" id="surname" placeholder="Įveskite savo pavardę">
    </div>
    <div class="form-group">
        <label for="email">El. pašto adresas</label>
        <input type="email" class="form-control" id="email" placeholder="Įveskite savo el. pašto adresą">
    </div>
    <div class="form-group">
        <label for="password">Slaptažodis</label>
        <input type="password" class="form-control" id="password" placeholder="Įveskite slaptažodį">
    </div>
    <button type="submit" class="btn btn-primary">Registruotis</button>
</form>
