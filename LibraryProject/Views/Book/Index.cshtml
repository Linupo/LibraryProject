@model IEnumerable<LibraryProject.Models.BookModel>

@{
    ViewBag.Title = "View";
}

<h2>Knygos</h2>

<p>
    @Html.ActionLink("Sukurti naują knygą", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearWritten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenreId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConditionId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearWritten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @item.GetGenre()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConditionId)
        </td>
        <td>
            @Html.ActionLink("Redaguoti", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Išsamiau", "Details", new { id=item.Id }) |
            @Html.ActionLink("Ištrinti", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
