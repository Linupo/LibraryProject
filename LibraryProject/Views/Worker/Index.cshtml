@model IEnumerable<LibraryProject.Models.WorkerModel>

@{
    ViewBag.Title = "Darbuotojų sąrašas";
}

<h2>Darbuotojų sąrašas</h2>

@Html.ActionLink("Grįžti į pagrindinį meniu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

<ul class='kwicks form-inline'>
    @Html.ActionLink("Pridėti darbuotoją", "NewWorkerForm", "Worker", new { @class = "btn btn-primary" })
    @Html.ActionLink("Atostogų prašymai", "ViewRequestsToLeave", "Worker", new { @class = "btn btn-primary" })
</ul>


<table class="table table-hover">
    <tr>
        <th>Darbuotojas</th>
        <th>Rangas</th>
        <th>Gimimo metai</th>
        <th>Aprašymas</th>
    </tr>

    @foreach (var worker in Model)
    {
        var templateName = String.Format("{0} {1}", worker.Template.Name, worker.Template.Surname);

        <tr onclick="location.href = '@Url.Action("Details", new { id = worker.Id })'">
            <td>@Html.DisplayFor(modelItem => templateName)</td>
            <td>@Html.DisplayFor(modelItem => worker.Tier)</td>
            <td>@Html.DisplayFor(modelItem => worker.Year)</td>
            <td>@Html.DisplayFor(modelItem => worker.Description)</td>
        </tr>
        <td></td>
        <td><p><a class="btn btn-primary" href="@Url.Action("EditWorkerForm", "Worker")">Redaguoti darbuotoją</a></p></td>
        <td><p><a class="btn btn-primary" href="@Url.Action("RemoveWorkerForm", "Worker")">Ištrinti darbuotoją</a></p></td>
    }
</table>
